<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <item  >
        <shape
                android:shape="rectangle"   >
            <solid
                    android:color="#EE7158"  />
        </shape>
    </item>
    <item  >
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45"
            android:pivotX="90%"
            android:pivotY="-5%" >
            <shape
                android:shape="rectangle"   >
                <solid
                    android:color="#D1634D"  />
            </shape>
        </rotate>
    </item>
</layer-list>