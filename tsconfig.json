{
    "compilerOptions": {
        "skipLibCheck": true,
        "target": "es5",
        "module": "esnext",
        "moduleResolution": "node",
        "incremental": true,
        "tsBuildInfoFile": ".tsbuildinfo",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "importHelpers": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "preserveSymlinks": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitUseStrict": true,
        "jsx": "preserve",
        "lib": ["es6", "dom", "es2015.iterable"],
        "baseUrl": ".",
        "paths": {
            "nativescript-vue": ["./node_modules/nativescript-akylas-vue"],
            "nativescript-pulltorefresh":   ["./node_modules/nativescript-akylas-pulltorefresh"],
            "~/*": ["app/*"],
            "*": ["./node_modules/tns-core-modules/*", "./node_modules/*"]
        }
    },
    "include": ["app/**/*", "references.d.ts"],
    "exclude": ["node_modules", "platforms", "**/angular"]
}